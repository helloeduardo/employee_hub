<!DOCTYPE html>
<html>
  <head>
    <title>EmployeeHub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <% if current_employee %>
        <p><%= link_to "Logout", "/logout" %></p>
      <% end %>
    </nav>

    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>
